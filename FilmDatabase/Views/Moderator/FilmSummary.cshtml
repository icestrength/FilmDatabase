@model FilmDatabase.Models.Film
<h2>@Html.ActionLink(Model.Name, "Details","Home", new { id = Model.Id },null)</h2>
 <div class="row">
    @if (Model.Image != null)
    {
        @Html.Raw(String.Format("<img style='width:{0}px;float:left; height:{1}px;' src=\"data:image/png;base64,"
                                     + Convert.ToBase64String(Model.Image) + "\" />", 200, 300))

    }
    
    @if (Model.Image == null)
    {

        <div class="user-photo"></div>
    }
    Category:
    @foreach (var c in Model.Categories)
    {
        @c.Name<text>,</text>
    }.
    <br>
    @Html.DisplayFor(modelItem => Model.Description)
     <div class="bottom-align-text">@Html.ActionLink(@Resources.Resource.Delete, "Delete", new { id = Model.Id })</div>
     <div class="bottom-align-left-text">@Html.ActionLink(@Resources.Resource.Edit, "Edit", new { id = Model.Id })</div>
</div>

<br />